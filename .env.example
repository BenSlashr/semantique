# API Configuration
VALUESERP_API_KEY=your_valueserp_api_key_here
SERP_API_KEY=your_valueserp_api_key_here

# LLM Keyword Filtering (Optional)
# Uncomment to enable GPT-5-Nano filtering for better keyword quality
# Cost: $1 for 4000 keyword checks
OPENAI_API_KEY=sk-your_openai_api_key_here
LLM_FILTERING_ENABLED=false
LLM_MODEL=gpt-5-nano
LLM_BATCH_SIZE=50
LLM_MAX_DAILY_REQUESTS=200

# Debug LLM (Optional)
# Uncomment to see detailed logs of LLM requests/responses
LLM_DEBUG_ENABLED=false

# SEO Analysis Configuration
DEFAULT_NUM_RESULTS=20
SCRAPING_TIMEOUT=10
SCRAPING_MAX_CONCURRENT=20
FOCUS_TOP_N=10
TARGET_SCORE_TOP_N=5
REQUIRED_WORDS_TOP_N=8

# Cache (7 jours - IMPLÉMENTÉ !)
# Active le cache Redis/mémoire pour économiser API + temps de calcul
ENABLE_CACHE=true
CACHE_TTL=604800  # 7 jours en secondes

# Redis Configuration (optionnel - fallback mémoire si non disponible)
# redis://localhost:6379/0 (default)